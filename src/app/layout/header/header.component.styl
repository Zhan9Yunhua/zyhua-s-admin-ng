header
  width 100%
  height 64px
  display flex
  align-items center
  position fixed
  top 0
  left 0
  box-shadow 0px 3px 5px -1px rgba(0, 0, 0, 0.2), 0px 6px 10px 0px rgba(0, 0, 0, 0.14), 0px 1px 18px 0px rgba(0, 0, 0, 0.12)

li
  margin 0 6px

.logo
  width 200px
  height 100%

.menu
  height 40px
  flex-grow 1
  display flex
  justify-content space-between

  & > ul
    display flex

.avatar
  display inline-block
  width 24px
  height 24px
  border-radius 50%

mat-icon, .name
  color #fff

