.sidebar
  width 200px
  height 500px
  background-color #fafafa

.menu
  padding: 10px 15px;
  font-weight: 700;
  line-height: 16px;
  margin: 0;
  font-size: 16px;
  cursor: pointer;
  width: 100%;
  text-align: left;
  background: 0 0;
  border: none;
  outline: 0;
  display flex
  align-items center
  justify-content space-between
  &:focus
    background-color rgba(#000, 0.08)
.submenu
  a
    font-size 14px
mat-icon
  font-size 16px
  width 20px
  height 20px
  line-height 20px

ul
  list-style-type: none;
  margin: 0 0 5px;
  padding: 0;
  overflow: hidden;

li
  font-size: 13px;
  line-height: 16px;
  margin: 0;
  padding: 5px 15px 5px 20px;
